# ============================================================================
# Website (Next.js) Configuration
# ============================================================================
# SECURITY: Never commit actual secrets. Copy this file to .env.local
# Generate secrets with: openssl rand -base64 32
# ============================================================================

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# API Configuration (Strapi API)
NEXT_PUBLIC_API_URL="http://localhost:1337"

# ============================================================================
# AUTHENTICATION (BetterAuth)
# ============================================================================

# PostgreSQL database URL for BetterAuth session storage
DATABASE_URL=postgresql://postgres:password@localhost:5432/attaqwa_lms

# BetterAuth secret — generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=change-me-generate-with-openssl-rand-base64-32

# Strapi API Token for server-to-server content requests
# Generate in Strapi admin panel: Settings → API Tokens
STRAPI_API_TOKEN=

# ============================================================================
# ISLAMIC SERVICES
# ============================================================================

# Aladhan Prayer Times API
NEXT_PUBLIC_ALADHAN_API_URL="https://api.aladhan.com/v1"

# Hadith API (hadithapi.com) - server-only, never exposed to client
HADITH_API_KEY=
HADITH_BASE_URL="https://hadithapi.com/api"

# Default Location (for prayer times)
NEXT_PUBLIC_DEFAULT_CITY="New York"
NEXT_PUBLIC_DEFAULT_COUNTRY="US"

# ============================================================================
# FEATURE FLAGS
# ============================================================================

NEXT_PUBLIC_ENABLE_MOBILE_APP=false
NEXT_PUBLIC_ENABLE_EDUCATION_MODULE=true
NEXT_PUBLIC_ENABLE_DONATIONS=false

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================

NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# ============================================================================
# OPTIONAL: Redis for session management and rate limiting
# ============================================================================
# UPSTASH_REDIS_URL=
# UPSTASH_REDIS_TOKEN=
