{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "Educational courses for Islamic learning"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "age_tier": {
      "type": "enumeration",
      "enum": ["children", "youth", "adults", "seniors"],
      "required": true
    },
    "subject": {
      "type": "enumeration",
      "enum": [
        "quran",
        "arabic",
        "fiqh",
        "hadith",
        "seerah",
        "aqeedah",
        "akhlaq",
        "tajweed"
      ],
      "required": true
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["beginner", "intermediate", "advanced"],
      "required": true,
      "default": "beginner"
    },
    "duration_weeks": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "schedule": {
      "type": "string",
      "required": true
    },
    "instructor": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "prerequisites": {
      "type": "text",
      "required": false
    },
    "learning_outcomes": {
      "type": "json",
      "required": false
    },
    "max_students": {
      "type": "integer",
      "required": false,
      "min": 1
    },
    "current_enrollments": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "start_date": {
      "type": "date",
      "required": false
    },
    "end_date": {
      "type": "date",
      "required": false
    },
    "lessons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson.lesson",
      "mappedBy": "course"
    },
    "enrollments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course-enrollment.course-enrollment",
      "mappedBy": "course"
    }
  }
}
