{
  "kind": "collectionType",
  "collectionName": "announcements",
  "info": {
    "singularName": "announcement",
    "pluralName": "announcements",
    "displayName": "Announcement",
    "description": "Masjid announcements for the community"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["general", "ramadan", "eid", "urgent", "community", "fundraising"],
      "required": true,
      "default": "general"
    },
    "imageUrl": {
      "type": "string"
    },
    "imageAlt": {
      "type": "string"
    },
    "pdfUrl": {
      "type": "string"
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "isPinned": {
      "type": "boolean",
      "default": false
    },
    "publishDate": {
      "type": "date"
    },
    "expiryDate": {
      "type": "date"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
