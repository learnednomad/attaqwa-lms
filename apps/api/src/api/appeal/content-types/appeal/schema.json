{
  "kind": "collectionType",
  "collectionName": "appeals",
  "info": {
    "singularName": "appeal",
    "pluralName": "appeals",
    "displayName": "Appeal",
    "description": "Financial and community campaign appeals"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["zakat", "sadaqah", "building_fund", "emergency", "education", "community"],
      "required": true
    },
    "goalAmount": {
      "type": "float",
      "min": 0
    },
    "currentAmount": {
      "type": "float",
      "min": 0,
      "default": 0
    },
    "currency": {
      "type": "string",
      "maxLength": 3,
      "default": "USD"
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date"
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "imageUrl": {
      "type": "string"
    },
    "contactEmail": {
      "type": "string"
    },
    "contactPhone": {
      "type": "string"
    }
  }
}
