{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Masjid events and community gatherings"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "startTime": {
      "type": "string",
      "required": true
    },
    "endTime": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "isIndoor": {
      "type": "boolean",
      "default": false
    },
    "isOutdoor": {
      "type": "boolean",
      "default": false
    },
    "imageUrl": {
      "type": "string"
    },
    "imageAlt": {
      "type": "string"
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "isRecurring": {
      "type": "boolean",
      "default": false
    },
    "recurrencePattern": {
      "type": "string"
    },
    "maxAttendees": {
      "type": "integer"
    },
    "category": {
      "type": "enumeration",
      "enum": ["lecture", "community", "youth", "sisters", "fundraiser", "other"],
      "default": "other"
    }
  }
}
